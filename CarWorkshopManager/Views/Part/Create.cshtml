@model CarWorkshopManager.ViewModels.Part.PartFormViewModel
@{
    ViewData["Title"] = "Dodaj część";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UnitPriceNet" class="form-label"></label>
        <input asp-for="UnitPriceNet" type="text" class="form-control" />
        <span asp-validation-for="UnitPriceNet" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="VatRateId" class="form-label">Stawka VAT</label>
        <select asp-for="VatRateId" asp-items="ViewBag.VatRates" class="form-select">
            <option value="">-- wybierz stawkę --</option>
        </select>
        <span asp-validation-for="VatRateId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Powrót</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}